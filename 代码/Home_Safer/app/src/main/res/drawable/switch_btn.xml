<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/off" android:width="50dp" android:height="50dp"></item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/open" android:width="50dp" android:height="50dp"></item>
        </layer-list>
    </item>
</selector>